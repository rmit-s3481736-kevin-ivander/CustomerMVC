@model CustomerMVC.Models.Payment

@{
    ViewBag.Title = "Create";
}

<h2>Payment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Credit Card Details</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            First Name
            <div class="col-md-10">
                @Html.EditorFor(model => model.First_Name)
                @Html.ValidationMessageFor(model => model.First_Name)
            </div>
        </div>

        <div class="form-group">
            Last Name
            <div class="col-md-10">
                @Html.EditorFor(model => model.Last_Name)
                @Html.ValidationMessageFor(model => model.Last_Name)
            </div>
        </div>

        <div class="form-group">
            Card Type
            <div class="col-md-10">
                VISA - @Html.RadioButtonFor(model => model.CardType, "VISA")<br />
                Master Card - @Html.RadioButtonFor(model => model.CardType, "Master Card")
                @Html.ValidationMessageFor(model => model.CardType)
            </div>
        </div>

        <div class="form-group">
            Card Number
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardNo)
                @Html.ValidationMessageFor(model => model.CardNo)
            </div>
        </div>

        <div class="form-group">
            Expired Date
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExpiredDate)
                @Html.ValidationMessageFor(model => model.ExpiredDate)
            </div>
        </div>

        <div class="form-group">
            CCV
            <div class="col-md-10">
                @Html.EditorFor(model => model.CCV)
                @Html.ValidationMessageFor(model => model.CCV)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm Payment" class="btn btn-default" />
            </div>
            <div>
                <p class="btn btn-default">@Html.ActionLink("Back", "Index", "Booking")</p>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
